<import src="../../templates/tabBar-template/tabBar.wxml" />
<import src="../../templates/copyright-template/copyright.wxml" />

<view>
  <view class="header">
    <view class="header-container">
      <view class="{{current==0?'line':''}} {{current==0?'active':''}}" data-current="0" bindtap="onChangeTap">
        租房
      </view>
      <view class="{{current==1?'line':''}} {{current==1?'active':''}}" data-current="1" bindtap="onChangeTap">
        卖房
      </view>
      <view class="{{current==2?'line':''}} {{current==2?'active':''}}" data-current="2" bindtap="onChangeTap">
        店铺
      </view>
      <view class="{{current==3?'line':''}} {{current==3?'active':''}}" data-current="3" bindtap="onChangeTap">
        跑腿
      </view>
      <view class="{{current==4?'line':''}} {{current==4?'active':''}}" data-current="4" bindtap="onChangeTap">
        招工
      </view>
      <view class="{{current==5?'line':''}} {{current==5?'active':''}}" data-current="5" bindtap="onChangeTap">
        二手
      </view>
    </view>
  </view>

  <view class="{{current==0?'show':'hidden'}}">
    <form bindsubmit="formSubmit">
      <view class="info-form-container">
        <view class="upload-img">
          <view>
            <image src="/images/icon/add-photo.png" class="add-ph-icon"></image>
          </view>
          <view>添加房屋照片</view>
        </view>

        <view class="input">
          <input placeholder="在此处填写你要出租的房产标题"></input>
        </view>

        <view class="detail-txtarea">
          <textarea placeholder='在此处详细描述你要出租的房产信息，如楼层，新旧程度，房屋配置情况等'>
          </textarea>
        </view>

        <view class="input">
          <input placeholder="需要描述房屋的地址信息"></input>
        </view>

        <view class="room-item">
          <view class="room">
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">室</view>
          </view>

          <view class="room">
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">平米</view>
          </view>

          <view class="room">
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">元/月</view>
          </view>

          <view class="room">
            <view class="room-txt">押</view>
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">付</view>
            <view class="inputs">
              <input></input>
            </view>
          </view>
        </view>

        <view class="input">
          <input placeholder="填写房子朝向，如东，南，西，北"></input>
        </view>

        <view class="input">
          <input placeholder="填写楼层信息，如4/9，表示楼房9层的第4层"></input>
        </view>

        <view class="selection">
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view>{{array[index]}}</view>
          </picker>
        </view>

        <view class="input">
          <input placeholder="填写你的称呼方式，如李先生"></input>
        </view>

        <view class="input">
          <input placeholder="填写你的号码"></input>
        </view>

        <view class="submit">
          <view>保存</view>
        </view>
      </view>
    </form>
  </view>

  <view class="{{current==1?'show':'hidden'}}">
    <form bindsubmit="formSubmit">
      <view class="info-form-container">
        <view class="upload-img">
          <view>
            <image src="/images/icon/add-photo.png" class="add-ph-icon"></image>
          </view>
          <view>添加房产照片</view>
        </view>

        <view class="input">
          <input placeholder="在此处填标题"></input>
        </view>

        <view class="detail-txtarea">
          <textarea placeholder='在此处详细描述你的房产信息，如产权，地理位置信息等'>
          </textarea>
        </view>

        <view class="input">
          <input placeholder="需要描述房产的地址信息"></input>
        </view>

        <view class="room-item">
          <view class="room">
          <view class="room-txt">产权</view>
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">年</view>
          </view>

          <view class="room">
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">平米</view>
          </view>

          <view class="room">
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">元/平米</view>
          </view>

          <view class="room">
            <view class="room-txt">室</view>
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">厅</view>
            <view class="inputs">
              <input></input>
            </view>
          </view>
        </view>

        <view class="selection">
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view>{{array[index]}}</view>
          </picker>
        </view>

        <view class="input">
          <input placeholder="填写你的称呼方式 如李先生"></input>
        </view>

        <view class="input">
          <input placeholder="填写你的号码"></input>
        </view>

        <view class="submit">
          <view>保存</view>
        </view>
      </view>
    </form>
  </view>

  <view class="{{current==2?'show':'hidden'}}">
     <form bindsubmit="formSubmit">
      <view class="info-form-container">
        <view class="upload-img">
          <view>
            <image src="/images/icon/add-photo.png" class="add-ph-icon"></image>
          </view>
          <view>添加店铺照片</view>
        </view>

        <view class="input">
          <input placeholder="在此处填标题"></input>
        </view>

        <view class="detail-txtarea">
          <textarea placeholder='在此处详细描述你的商铺情况，如转让，售卖，位置信息等'>
          </textarea>
        </view>

        <view class="input">
          <input placeholder="需要描述商铺的地址信息"></input>
        </view>

        <view class="room-item">
          <view class="room">
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">平米</view>
          </view>

          <view class="room">
            <view class="inputs">
              <input></input>
            </view>
            <view class="room-txt">元/平米</view>
          </view>

          <view class="room">
            <view class="room-txt">总价</view>
            <view class="total-price">
              <input></input>
            </view>
            <view class="room-txt">万</view>
          </view>
        </view>

        <view class="selection">
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view>{{array[index]}}</view>
          </picker>
        </view>

        <view class="input">
          <input placeholder="填写你的称呼方式 如李先生"></input>
        </view>

        <view class="input">
          <input placeholder="填写你的号码"></input>
        </view>

        <view class="submit">
          <view>保存</view>
        </view>
      </view>
    </form>
  </view>

  <view class="{{current==3?'show':'hidden'}}">
     <form bindsubmit="formSubmit">
      <view class="info-form-container">

        <view class="input">
          <input placeholder="填写标题"></input>
        </view>

        <view class="detail-txtarea">
          <textarea placeholder='详细描写你要别人帮你跑腿代办的事情'>
          </textarea>
        </view>

        <view class="input">
          <input placeholder="填写你的称呼方式 如李先生"></input>
        </view>

        <view class="input">
          <input placeholder="填写你希望支付的酬金(元)"></input>
        </view>

        <view class="selection">
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view>{{array[index]}}</view>
          </picker>
        </view>

        <view class="input">
          <input placeholder="填写你的电话号码"></input>
        </view>

        <view class="submit">
          <view>保存</view>
        </view>
      </view>
    </form>
  </view>

  <view class="{{current==4?'show':'hidden'}}">
     <form bindsubmit="formSubmit">
      <view class="info-form-container">

        <view class="input">
          <input placeholder="填写你的招工标题，如宾馆招洗碗工月薪2000"></input>
        </view>

        <view class="input">
          <input placeholder="填写工作地点，如绥宁绿洲宾馆"></input>
        </view>

        <view class="input">
          <input placeholder="填写你的称呼方式 如李先生"></input>
        </view>

        <view class="input">
          <input placeholder="填写该工作岗位的薪水(月薪)"></input>
        </view>

        <view class="selection">
          <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
            <view>{{array[index]}}</view>
          </picker>
        </view>

        <view class="input">
          <input placeholder="填写你的电话号码"></input>
        </view>

        <view class="submit">
          <view>保存</view>
        </view>
      </view>
    </form>
  </view>

  <view class="{{current==5?'show':'hidden'}}">
    <form bindsubmit="formSubmit">
      <view class="info-form-container">
        <view class="upload-img">
          <view>
            <image src="/images/icon/add-photo.png" class="add-ph-icon"></image>
          </view>
          <view>添加宝贝照片</view>
        </view>

        <view class="input">
          <input placeholder="在此处填写你要出售的二手宝贝标题"></input>
        </view>

        <view class="detail-txtarea">
          <textarea placeholder='在此处详细描述你要出售的二手宝贝信息，如新旧程度，产品功能等'>
          </textarea>
        </view>

        <view class="input">
          <input placeholder="填写你的线下交易地点"></input>
        </view>

        <view class="input">
          <input placeholder="填写你的出售价格"></input>
        </view>

        <view class="selection" wx:for="{{objArray}}" wx:for-item="item" wx:key="key" wx:for-index="idx">
          <picker bindchange="bindPickerChange" value="{{item.index}}" range="{{item.option}}" data-current="{{idx}}">
            <view>{{item.option[item.index]}}</view>
          </picker>
        </view>

        <view class="input">
          <input placeholder="填写你的称呼方式，如李先生"></input>
        </view>

        <view class="input">
          <input placeholder="填写你的号码"></input>
        </view>

        <view class="submit">
          <view>保存</view>
        </view>
      </view>
    </form>
  </view>

</view>

<template is="copyright" data="{{time}}" />
<template is="tabBar" data="{{tabBar:bindData.tabBar}}" />