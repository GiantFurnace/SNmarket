<import src="../../templates/tabBar-template/tabBar.wxml" />
<import src="../../templates/renting-template/renting.wxml" />

<view class="index-container">
  <!-- 顶部搜索栏 -->
  <view class="top-container">
    <view class="left">
      <view class="location">广州</view>
      <view>
        <image src="/images/icon/down.png" class="down-icon"></image>
      </view>
    </view>
    <view class="right">
      <input placeholder='租房，门面，二手车'></input>
    </view>
  </view>
  <!-- /顶部搜索栏 -->  

  <!-- 功能列表 -->
  <view class="function-container">
    <view class="functions">
      <view>
        <image src="/images/icon/zufang.png" class="icons"></image>
        <view class="function-txt">租房</view>
      </view>
      <view>
        <image src="/images/icon/maifang.png" class="icons"></image>
        <view class="function-txt">卖房</view>
      </view>
      <view>
        <image src="/images/icon/menmian.png" class="icons"></image>
        <view class="function-txt">门面</view>
      </view>
    </view>

    <view class="functions">
      <view>
        <image src="/images/icon/zhaogong.png" class="icons"></image>
        <view class="function-txt">招工</view>
      </view>
      <view>
        <image src="/images/icon/paotui.png" class="icons"></image>
        <view class="function-txt">跑腿</view>
      </view>
      <view>
        <image src="/images/icon/ershou.png" class="icons"></image>
        <view class="function-txt">二手</view>
      </view>
    </view>
  </view>
  <!-- /功能列表 -->  

  <!-- 广告swiper -->
  <view class="swiper-container">
    <swiper indicator-dots="false" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{imgUrls}}" wx:key="{{key}}">
        <swiper-item>
          <image src="{{item}}" style="width:98%;height:375rpx;"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- /广告swiper -->

  <view class="renting-title">绥宁租房市场动态</view>

  <block wx:for="{{renting_data}}" wx:for-item="item" wx:key="key">
    <template is="renting" data="{{...item}}" />
  </block>
  
  <!-- 底部tabBar -->
  <template is="tabBar" data="{{tabBar:bindData.tabBar}}" />
  <!-- /底部tabBar -->

</view>