<template name="sale">
  <view class="renting-container">
    <view bindtap="onSaleDetail" data-sid="{{sid}}"><image src="{{img}}" class="image"></image></view>
    <view class="renting-detail">
      <view class="title" bindtap="onSaleDetail" data-sid="{{sid}}">{{title}}</view>
      <view class="room-detail">
        <view>户型：{{roomType}}</view>
        <view>面积：{{acreage}}平方</view>
      </view>

      <view class="address-detail">{{address}}</view>

      <view class="rent">
        <view class="money">{{money}}元/平方</view>
        <view class="date">{{date}}</view>
        <view class="calling" bindtap="onPhoneCall" data-phone="{{phone}}">打电话</view>
      </view>
    </view>
  </view>
</template>