@import "../../templates/tabBar-template/tabBar.wxss";
@import "../../templates/mask-tips-template/mask-tips-template.wxss";

/* 用户信息样式开始 */
.login-container{
  width:100%;
  display:flex;
  flex-direction:column;
  align-items:center;
}

.avatar-box{
  margin-top:100rpx;
}

.avatar{
  width:200rpx;
  height:200rpx;
  border-radius: 50%;
}

.user-nickname{
  font-size: 24rpx;
  margin-top:20rpx;
}

.user-gender{
  display: flex;
  height: 50rpx;
  margin-top:30rpx;
}

.user-gender image{
  width:50rpx;
  height:50rpx;
}

.user-gender text{
  font-size: 24rpx;
  line-height: 50rpx;
}
/* 用户信息样式结束 */

/* 操作栏样式开始 */
.operation-box{
  margin-top:40rpx;
  border-top:10px solid #eee;
  display:flex;
  flex-direction: column;
  border-bottom: 1px solid #eee;
}

.operation-item{
  width:95%;
  margin:0 auto;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eee;
  padding: 10rpx 0;
}

.operation-item:last-child{
  border-bottom: 0;
}

.operation-item image{
  width:50rpx;
  height: 50rpx;
  margin-left:50rpx;
}

.operation-item text{
  line-height: 2;
  margin-left:20rpx;
  color: #666;
  font-size: 26rpx;
}
/* 操作栏样式结束 */
